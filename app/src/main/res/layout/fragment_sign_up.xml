<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-2dp"
            android:src="@mipmap/red_ellipes"/>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_marginRight="-2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/black_ellipes"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/logo"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="20dp"
                    android:text="Sign Up"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/customer"

                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:background="@drawable/left_round_back"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:fontFamily="@font/nunito_regular"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Sender"
                        android:textColor="@android:color/white" />


                    <TextView
                        android:id="@+id/reciever"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:background="@drawable/right_round_back"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:fontFamily="@font/nunito_regular"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Reciever"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginRight="70dp"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/email_back"
                            android:drawableLeft="@mipmap/user"
                            android:drawablePadding="15dp"
                            android:hint="Full Name"
                            android:paddingLeft="15dp"
                            android:fontFamily="@font/nunito_regular"
                            android:paddingTop="15dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="15dp" />


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:background="@drawable/middle_item_back"
                            android:drawableLeft="@mipmap/email"
                            android:drawablePadding="15dp"
                            android:hint="Email"
                            android:paddingLeft="15dp"
                            android:paddingTop="15dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="15dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/middle_item_back"
                            android:drawableLeft="@mipmap/mobile_no"
                            android:drawablePadding="18dp"
                            android:hint="Mobile No"
                            android:fontFamily="@font/nunito_regular"
                            android:paddingLeft="15dp"
                            android:paddingTop="15dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="15dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pass_back"
                            android:drawableLeft="@mipmap/password"
                            android:drawablePadding="15dp"
                            android:hint="Password"
                            android:fontFamily="@font/nunito_regular"
                            android:paddingLeft="15dp"
                            android:paddingTop="15dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="15dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:src="@mipmap/tick" />

                </RelativeLayout>


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="@string/i_accept_all_terms_conditions_privacy_policy"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-5dp"
                        android:background="@drawable/button_back_register"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:fontFamily="@font/nunito_regular"
                        android:paddingBottom="15dp"
                        android:text="LOGIN ?"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:id="@+id/signup_login"
                        android:textColor="@color/red" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>