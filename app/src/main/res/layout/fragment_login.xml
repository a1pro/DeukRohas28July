<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoginFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-2dp"
            android:src="@mipmap/red_ellipes"/>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_marginRight="-2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/black_ellipes"/>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/logo"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Login"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="30dp"
                    android:textSize="30sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginRight="70dp"
                        android:orientation="vertical">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/email_back"
                            android:drawableLeft="@mipmap/email"
                            android:drawablePadding="15dp"
                            android:hint="Email"
                            android:fontFamily="@font/nunito_regular"
                            android:paddingRight="10dp"
                            android:paddingLeft="15dp"
                            android:id="@+id/login_email"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pass_back"
                            android:drawableLeft="@mipmap/password"
                            android:drawablePadding="15dp"
                            android:layout_marginTop="-1dp"
                            android:hint="Password"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/nunito_regular"
                            android:paddingLeft="15dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/login_button"
                        android:layout_marginRight="30dp"
                        android:src="@mipmap/next_errow" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="17sp"
                    android:text="Forgot Password?" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="REGISTER?"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingRight="15dp"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_marginLeft="-5dp"
                        android:fontFamily="@font/nunito_regular"
                        android:paddingLeft="15dp"
                        android:id="@+id/login_register"
                        android:background="@drawable/button_back_register"
                        android:textColor="@color/red"/>


                    <Button
                        android:id="@+id/login_guest"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="GUEST?"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingRight="15dp"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/nunito_regular"
                        android:background="@drawable/button_back_guest"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/red"/>


                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>